{{define "index.html"}}
<!doctype html>
<html>
    <head>
        <title> WaveGuide Server Demo </title>
        <link rel="stylesheet" href="/static/waveguide.css">
        <script type="text/javascript" src="/static/waveguide.min.js"></script>
    </head>
    <body>
        <h3> Recent Uploads </h3>
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Upload Date</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Videos }}
                <tr>
                    <td><a href="/c/{{ .Category.ID }}/">{{ .Category.Name }}</a></td>
                    <td><a href="/v/{{ .ID }}/">{{ .Name}}</a></td>
                    <td>{{ FormatDate .UploadedAt }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        <script type="text/javascript">
         var guide = waveguide.New();
         var info = guide.FindVideo();
        </script>
    </body>
</html>
{{end}}
