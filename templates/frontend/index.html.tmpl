{{define "index.html"}}
<!doctype html>
<html>
    <head>
        <title> WaveGuide Server Demo </title>
    </head>
    <body>
        <h3> Recent Uploads </h3>
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Upload Date</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Videos }}
                <tr>
                    <td><a href="/c/{{ .Category.ID }}/">{{ .Category.Name }}</a></td>
                    <td><a href="/v/{{ .ID }}/">{{ .Name}}</a></td>
                    <td>{{ FormatDate .UploadedAt }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
    </body>
</html>
{{end}}
